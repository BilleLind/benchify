generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DB_URL")
}

model Product {
  id           Int       @id @default(autoincrement())
  titel        String    @db.VarChar(255)
  description  String
  price        Int
  featureImage String
  category     String?
  categoryRef  Category? @relation(fields: [category], references: [titel])
  tags         Tags[]
}

model Category {
  titel    String    @id @unique @db.VarChar(255)
  products Product[]
}

model Tags {
  titel String    @id @unique @db.VarChar(255)
  tags  Product[]
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DB_URL")
}

model Product {
  id           Int       @id @default(autoincrement())
  title        String    @db.VarChar(255)
  description  String
  price        Int
  featureImage String?
  category     String
  categoryRef  Category? @relation(fields: [category], references: [title])
  tags         Tags[]
}

model Category {
  title    String    @id @unique @db.VarChar(255)
  products Product[]
}

model Tags {
  title String    @id @unique @db.VarChar(255)
  tags  Product[]
}

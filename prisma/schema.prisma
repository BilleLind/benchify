generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DB_URL")
}

model Product {
  id           Int       @id @default(autoincrement())
  title        String    @db.VarChar(255)
  description  String //unlimited text
  price        Int
  categoryRef  Category? @relation(fields: [category], references: [titel])
  category     String?
  tags         Tags[] //implicit Many to Many relationship
  featureImage String //url
}

model Category {
  titel    String    @id @unique @db.VarChar(255)
  products Product[]
}

model Tags {
  titel String    @id @unique @db.VarChar(255)
  tags  Product[]
}

